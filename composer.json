{
    "name": "skeeks/app-shop-unify2",
    "description": "Shop on SkeekS CMS",
    "keywords": ["framework", "cms", "skeeks", "sx", "app", "yii2", "shop"],
    "homepage": "https://skeeks.com",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://skeeks.com",
        "wiki": "https://cms.skeeks.com/docs"
    },
    "authors": [
        {
            "name": "Semenov Alexander",
            "email": "semenov@skeeks.com"
        }
    ],
    "require": {
        "skeeks/cms-basic-shop": "dev-master",

        "skeeks/cms-external-links": "^1.0",
        "skeeks/theme-unify-shop": "^1.0",

        "skeeks/cms-db-dumper": "dev-master",
        "skeeks/cms-rp-view-widget": "dev-master",
        "skeeks/cms-backend-admin": "dev-master",
        "skeeks/cms-import-csv": "dev-master",
        "skeeks/cms-export": "dev-master",
        "skeeks/cms-search": "dev-master",
        "skeeks/cms-basic": "dev-master",
        "skeeks/cms": "dev-master"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "*"
    },
    "minimum-stability" : "dev",
    "prefer-stable" : true,
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject",
            "yii\\composer\\Installer::postInstall"
        ],
        "post-install-cmd": [
            "yii\\composer\\Installer::postInstall"
        ],
        "post-update-cmd": [
            "skeeks\\cms\\composer\\Installer::clearDirs",
            "php yii cms/migrate --interactive=0",
            "skeeks\\cms\\composer\\Installer::clearDirs",
            "php yii rbac/init",
            "php yii cmsAgent/init"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "console/runtime": "0777",
                    "common/runtime": "0777",
                    "frontend/runtime": "0777",
                    "frontend/web/assets": "0777",
                    "yii": "0755"
                }
            ]
        },
        "yii\\composer\\Installer::postInstall": {
            "generateCookieValidationKey": [
                "config/common/params.php"
            ]
        },
        "skeeks\\cms\\composer\\Installer::clearDirs": {
            "dirs": [
                "console/runtime/cache",
                "frontend/runtime/cache",
                "frontend/web/assets"
            ]
        },
        "config-plugin-file": "configuration.php"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "yiisoft/config": true,
            "yiisoft/yii2-composer": true,
            "skeeks/cms-composer-update-plugin": true
        },
        "process-timeout": 1800,
        "discard-changes": true
    }
}
